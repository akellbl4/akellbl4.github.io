{
	"name": "pavel.mineev.me",
	"version": "0.0.0",
	"description": "My personal site",
	"author": "Pavel Mineev <pavel@mineev.me>",
	"license": "MIT",
	"scripts": {
		"dev": "microsite",
		"build": "microsite build",
		"start": "microsite serve",
		"lint:js": "eslint public/*.js",
		"lint:css": "stylelint public/*.css",
		"lint": "run-p lint:*",
		"prettier": "prettier --write public/*.{js,css,html}"
	},
	"devDependencies": {
		"@snowpack/plugin-postcss": "^1.1.0",
		"autoprefixer": "^10.2.4",
		"microsite": "^1.1.0-next.6",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^8.3.1",
		"preact": "^10.5.12",
		"tailwindcss": "^2.0.2"
	},
	"prettier": {
		"arrowParens": "always",
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"tabWidth": 2
	},
	"stylelint": {
		"plugins": [
			"stylelint-prettier"
		],
		"extends": [
			"stylelint-config-standard",
			"stylelint-prettier/recommended"
		],
		"rules": {
			"prettier/prettier": true
		}
	},
	"eslintConfig": {
		"env": {
			"browser": true
		},
		"plugins": [
			"prettier"
		],
		"extends": [
			"standard",
			"plugin:prettier/recommended"
		],
		"rules": {
			"prettier/prettier": "error"
		}
	}
}
